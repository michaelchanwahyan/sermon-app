			animateScripture({height:newHeight, padding:10, marginBottom: 5}, 300);
			hideButtonByClassName("btn-show-notes");
			if($(".article-myNotes").length && $(".article-myNotes").hasClass("h-100")){
				$(".article-myNotes").removeClass("h-100");
