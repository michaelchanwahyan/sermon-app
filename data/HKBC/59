		});

		btn.on("click", function(e) {
			e.preventDefault();
			$("html, body").animate({scrollTop:0}, "300");
		});
		

		const player = new Plyr(".audioPlayer");
		

		$(function () {
			$("[data-toggle=\"tooltip\"]").tooltip();
		})
		

		var totalImages = 0;
