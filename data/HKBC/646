		var myInput = document.getElementById("myInput")

		myModal.addEventListener("shown.bs.modal", function () {
			myInput.focus()
		})
		

		$(document).ready(function(){
			$(".slick1").slick({
				dots: true
			});
		});
		

		var tooltipTriggerList = [].slice.call(document.querySelectorAll("[data-bs-toggle=\"tooltip\"]"));
