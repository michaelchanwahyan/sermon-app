			$(".article-citation-magnifier").addClass("h-100",300);
			showButtonByClassName("btn-show-notes");
		}
	})

	$(".btn-show-notes").click(function(){
		var isMobile = $(window).width() < 992;

		if (!$("#section-scripture").hasClass("active")){
