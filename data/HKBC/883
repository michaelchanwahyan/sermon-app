			}
			$("a.article-citation").first().click();
		}else {
			if($(".article-myNotes").length > 0 && $(".article-myNotes").hasClass("h-100")) {
				let newHeight = $("#section-scripture").height() * 0.5 - 2.5;
				loadScripture($("a.article-citation"));
