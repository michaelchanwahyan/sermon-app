		if ($("#section-scripture").hasClass("active") && JSON.stringify(getScriptureData($("#section-scripture"))) == JSON.stringify(getScriptureData($(this)))){
			closeScripture();
		}
		else{
			loadScripture($(this));
		}
	});
	
