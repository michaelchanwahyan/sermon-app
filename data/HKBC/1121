				animateScripture();
				if($(".article-myNotes").length && !$(".article-myNotes").hasClass("h-100")){
					$(".article-myNotes").addClass("h-100");
				}
				showButtonByClassName("btn-show-scripture");
			}
		}
	})
	
	var backgroundColor = $("a.article-citation").css("background-color");
